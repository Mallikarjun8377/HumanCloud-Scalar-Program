package DataStructure;

public class NewArray {


	
	private int arr[];
	private int size;
	private int count;
	
	public void CustomArray(int data) {
		this.size=1;
		this.arr=new int[size];
		this.count=0;
	}
	private void expand() {
		if(this.size==this.count) {
			int tempArr[]=new int[size+1];
			for(int i=0;i<count;i++) {
				tempArr[i]=arr[i];
			}
			arr=tempArr;
			size=size+1;
		}
	}
	public void insert(int data) {
		expand();
		arr[count]=data;	
		count++;
	}
	public void display(){
		for(int ca:arr) {
			System.out.println(ca);
		}
		
	}
	public void addElementAt(int index,int data) {
		expand();
		arr[count]=size;
		for (int i=0;i>=index-1;i--) {
			arr[i+1]=arr[i];
		}
		arr[index]=data;
		count++;

		}
	
}
