package DataStructure;

public class Stack {
	
	Node head;
    int size;

	 Stack() {
		head=null;
		
	}
	
	  void push(int data) {
		 Node temp =new Node(data);
		 temp.next=head;
		 size++;
		 head=temp;
	   
	}
	     void peak() {
	    	try {if(head!=null) ;
	    		System.out.println("Current element is-" +"  "+head.data);
	    	}catch(NullPointerException e) {
	    		System.out.println("Stack is empty");	    		
	    	}	    	 	
	}
	     int pop() {
	    	try { if(head!=null) ;
	    		 int result=head.data;
		    	 head=head.next;
		    	 size--;
		    	 System.out.println("Element deleted successfully"+"Upadated Stack");
		    	 return result;
		    	 }
	    	catch(NullPointerException e){ 
	    		System.out.println("Stack is empty");
	    	}
	    	return size ;
	     }

	     boolean isEmpty() {
	    	 return head==null;
	     }
	     int size() {
	    	 return size;
	     }
	     public  void display() {
				Node current=head;
				if(current==null) {
					System.out.println("Stack is empty");
			 while(current!=null) {
				 System.out.print(" " +current.data);
				 current=current.next;
				 
				 }
				
				
			 }
			
	     }
}
				 
			 
				
		 
	     
	     
     
	
			

